<!DOCTYPE HTML>
<html>
  <head>
    <title>Shared Resources<%= if content_for(:title), do: " -- #{content_for(:title)}" %></title>
    <meta charset="utf-8">
    <link rel="icon" type="image/x-icon" href="/static/favicon.ico">
    <link href="/static/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="/static/css/custom.css" rel="stylesheet" media="screen">
    <link href='http://fonts.googleapis.com/css?family=Simonetta|Spirax' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <header class="navbar">
      <nav class="navbar-inner">
        <ul class="nav">
          <li class="brand"><a href="/">Shared Resources</a></li>
        </ul>
        <%= if @current_user do %>
          <a href="/users/logout" class="btn pull-right btn-danger">Log Out</a>
          <a href="/resources/new" class="btn pull-right">Add New Resource</a>
          <a href="/users/new" class="btn pull-right">Add New User</a>
          <%= if @current_user.admin do %>
            <a href="/users/" class="btn pull-right">Users</a>
          <%= end %>
          <a href="/users/<%= @current_user.id %>/edit" class="btn pull-right"><%= @current_user.name %></a>

        <% else %>
          <a href="/users/login" class="btn pull-right">Log In</a>
        <% end %>
      </nav>
    </header>

    <section class="container">
      <section id="errors" class="notice_section"><%= @errors %></section>
      <section id="notices" class="notice_section"><%= @notices %></section>

      <%= content_for(:template) %>
    </section>

    <script src="/static/js/bower_components/jquery/jquery.min.js"></script>
    <script src="/static/js/bower_components/bacon/dist/Bacon.min.js"></script>
    <script src="/static/js/bootstrap.min.js"></script>
    <script src="/static/js/compiled/application.js"></script>
  </body>
</html>
